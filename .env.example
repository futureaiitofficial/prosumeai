# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ATScribe

# Session and Cookie Security
SESSION_SECRET=your-secure-session-secret-key-here
COOKIE_SECRET=your-secure-cookie-secret-key-here
COOKIE_DOMAIN=yourdomain.com
SESSION_MAX_AGE=604800000 # 7 days in milliseconds

# CORS
CORS_ORIGIN=https://yourdomain.com

# Authentication Rate Limiting
AUTH_RATE_LIMIT_ATTEMPTS=5  # Max login attempts
AUTH_RATE_LIMIT_DURATION=900 # Duration in seconds (15 mins)
AUTH_RATE_LIMIT_BLOCK=3600  # Block duration in seconds (1 hour)

# API Keys (replace with actual keys)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Node Environment
NODE_ENV=development # or production 